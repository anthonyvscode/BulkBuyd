@model BulkBuyd.Models.BulkBuy.CreateVm

@{
    ViewBag.Title = "Brewery Tour";
}

<div class="heads" style="background: url(/images/warehouse.jpeg) 50% 27%;">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2><span>//</span> New Bulk Buy</h2>
            </div>
        </div>
    </div>
</div>

<!-- begin:content -->
<div class="page-content">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                @using (Html.BeginForm("New", "BulkBuy", FormMethod.Post, new { @class = "" }))
                {
                    <h3 class="text-center">Create a New Bulk Buy </h3>
                    <hr>
                    <div class="form-group">
                        <label class="">Name</label>
                        <div class="">
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                            <div class="help-block">
                                @Html.ValidationMessageFor(x => x.Name)
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="">Closing Date</label>
                        <div class="">
                            @Html.TextBoxFor(x => x.ClosingDate, new { type = "date", @class = "form-control" })
                            <div class="help-block">
                                @Html.ValidationMessageFor(x => x.ClosingDate)
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="">Description</label>
                        <div class="">
                            @Html.TextAreaFor(x => x.Description, new { @class = "form-control", rows = 10 })
                            <div class="help-block">
                                @Html.ValidationMessageFor(x => x.Description)
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="">
                            <button type="submit" class="btn btn-warning">Save</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- end:content -->
